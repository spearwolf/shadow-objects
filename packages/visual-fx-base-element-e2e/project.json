{
  "name": "visual-fx-base-element-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "packages/visual-fx-base-element-e2e",
  "sourceRoot": "packages/visual-fx-base-element-e2e/src",
  "projectType": "library",
  "namedInputs": {
    "defaults": [
      "{projectRoot}/dist",
      "{projectRoot}/pages",
      "{projectRoot}/public",
      "{projectRoot}/src",
      "{projectRoot}/tests",
      "{projectRoot}/index.html"
    ]
  },
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.ts",
          "{projectRoot}/src/**/*.js",
          "{projectRoot}/tests/**/*.ts",
          "{projectRoot}/tests/**/*.js"
        ]
      }
    },
    "test": {
      "executor": "nx:run-script",
      "options": {
        "script": "test"
      },
      "outputs": ["{projectRoot}/playwright-report", "{projectRoot}/coverage"],
      "dependsOn": ["^build", "build"]
    }
  },
  "tags": ["e2e"]
}
