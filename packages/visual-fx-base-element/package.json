{
  "name": "@spearwolf/visual-fx-base-element",
  "description": "classes and helpers for creating custom elements for visual effects",
  "version": "0.0.1-dev",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./bundle.js": {
      "default": "./dist/bundle.js",
      "types": "./dist/src/bundle.d.ts"
    },
    "./simple-greeting.js": {
      "default": "./dist/src/simple-greeting.js",
      "types": "./dist/src/simple-greeting.d.ts"
    },
    "./vfx-display.js": {
      "default": "./dist/src/vfx-display.js",
      "types": "./dist/src/vfx-display.d.ts"
    },
    "./twopoint5d-stage2d.js": {
      "default": "./dist/src/twopoint5d-stage2d.js",
      "types": "./dist/src/twopoint5d-stage2d.d.ts"
    }
  },
  "sideEffects": [
    "build/src/simple-greeting.js",
    "build/src/vfx-display.js",
    "build/src/twopoint5d-stage2d.js",
    "dist/src/simple-greeting.js",
    "dist/src/vfx-display.js",
    "dist/src/twopoint5d-stage2d.js",
    "dist/src/bundle.js",
    "dist/bundle.js"
  ],
  "scripts": {
    "tsc": "pnpm exec tsc",
    "run-s": "pnpm exec run-s -s",
    "build": "pnpm run-s compile:lib compile:bundle bundle makePackageJson",
    "compile:lib": "pnpm tsc -b tsconfig.lib.json",
    "compile:bundle": "pnpm tsc -b tsconfig.bundle.json",
    "compile:tests": "pnpm tsc -b tsconfig.tests.json",
    "bundle": "pnpm exec node bundle.mjs",
    "vitest:run": "pnpm exec vitest tests/src --run",
    "test": "pnpm compile:tests && pnpm vitest:run",
    "clean": "pnpm exec rimraf build types dist lib tests",
    "makePackageJson": "pnpm exec node ../../scripts/makePackageJson.mjs"
  },
  "dependencies": {
    "@lit/context": "^1.0.0",
    "@spearwolf/eventize": "^3.4.0",
    "@spearwolf/signalize": "^0.7.0",
    "@spearwolf/twopoint5d": "^0.3.0",
    "lit": "3.0.0-pre.1"
  }
}
