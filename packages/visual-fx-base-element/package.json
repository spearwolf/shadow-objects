{
  "name": "@spearwolf/visual-fx-base-element",
  "description": "classes and helpers for creating custom elements for visual effects",
  "version": "0.0.1-dev",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./bundle.js": {
      "default": "./dist/bundle.js",
      "types": "./dist/src/bundle.d.ts"
    },
    "./simple-greeting.js": {
      "default": "./dist/src/simple-greeting.js",
      "types": "./dist/src/simple-greeting.d.ts"
    },
    "./visual-fx-base.js": {
      "default": "./dist/src/visual-fx-base.js",
      "types": "./dist/src/visual-fx-base.d.ts"
    }
  },
  "sideEffects": [
    "build/src/simple-greeting.js",
    "build/src/visual-fx-base.js",
    "dist/src/simple-greeting.js",
    "dist/src/visual-fx-base.js",
    "dist/src/bundle.js",
    "dist/bundle.js"
  ],
  "scripts": {
    "build": "pnpm exec run-s compile:lib compile:bundle bundle makePackageJson",
    "compile:lib": "pnpm exec tsc -b tsconfig.lib.json",
    "compile:bundle": "pnpm exec tsc -b tsconfig.bundle.json",
    "compile:tests": "pnpm exec tsc -b tsconfig.tests.json",
    "bundle": "pnpm exec node build.bundle.mjs",
    "vitest:run": "pnpm exec vitest tests/src --run",
    "test": "pnpm exec run-s compile:tests vitest:run",
    "clean": "pnpm exec rimraf build types dist lib tests",
    "makePackageJson": "pnpm exec node ../../scripts/makePackageJson.mjs"
  },
  "rollup": {
    "external": [
      "@spearwolf/eventize",
      "@spearwolf/signalize",
      "lit/decorators.js",
      "lit"
    ]
  },
  "dependencies": {
    "@spearwolf/eventize": "^3.0.1",
    "@spearwolf/signalize": "^0.6.1",
    "@spearwolf/twopoint5d": "^0.1.0",
    "lit": "3.0.0-pre.1"
  }
}
