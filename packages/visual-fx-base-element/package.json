{
  "name": "@spearwolf/visual-fx-base-element",
  "description": "a base class and helpers for visual fx web components",
  "version": "0.0.1-dev",
  "author": {
    "name": "Wolfger Schramm",
    "email": "wolfger@spearwolf.de",
    "url": "https://www.spearwolf.de"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./bundle.js": {
      "default": "./dist/bundle.js",
      "types": "./dist/types/bundle.d.ts"
    },
    "./simple-greeting.js": {
      "import": "./dist/simple-greeting.js",
      "require": "./dist/simple-greeting.cjs",
      "types": "./dist/types/simple-greeting.d.ts"
    }
  },
  "sideEffects": [
    "build/src/simple-greeting.js",
    "build/src/bundle.js",
    "dist/simple-greeting.js",
    "dist/simple-greeting.cjs",
    "dist/bundle.js"
  ],
  "scripts": {
    "build": "pnpm run-s compile bundle makePackageJson",
    "compile": "tsc -b tsconfig.build.json",
    "bundle": "pnpm run-s bundle:library bundle:standalone",
    "bundle:library": "rollup -c rollup.config.mjs",
    "bundle:standalone": "node build.bundle.mjs",
    "clean": "rimraf build types dist ../../dist/packages/visual-fx-base-element",
    "makePackageJson": "node ../../scripts/makePackageJson.mjs"
  },
  "rollup": {
    "external": [
      "@spearwolf/eventize",
      "@spearwolf/signalize",
      "lit/decorators.js",
      "lit"
    ]
  },
  "dependencies": {
    "@spearwolf/eventize": "^3.0.1",
    "@spearwolf/signalize": "^0.5.1",
    "lit": "3.0.0-pre.1"
  }
}
